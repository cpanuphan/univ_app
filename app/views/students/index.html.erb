<div class="row">
  <div class="col s12">
    <h3 class="center-align">Students Directory</h3>
  </div>
</div>

<div class="row">
  <% @students.each do |student| %>
  <div class="col s12 m6 l6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= student.name %></span>
        <p>Email: <%= student.email %></p>
        <p>Course Enrollments: None</p>
      </div>
      <div class="card-action">
        <%= link_to '<i class="material-icons left">account_box</i>View Profile'.html_safe, student_path(student.id), class: "waves-effect waves-light btn" %>
      </div>
    </div>
  </div>
  <% end %>
</div>